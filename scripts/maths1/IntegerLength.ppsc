@use(Math)
@use(String)

function ( n ) {
	$n toString length
} -> intlen

function ( n ) {
	$n log10 trunc ++
} -> intlen2

function ( n ) {
	0 -> $res
	while ( $n 1 > ) {
		$res ++ -> $res
		$n 1 shr -> $n
		//$n 10 div -> $n
	}
	$res
} -> binlen

